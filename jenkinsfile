pipeline {
    agent any

    stages {
        stage('Get code') {
            steps {
                git branch: 'main', url: 'https://github.com/Saketh227/one.git'
            }
        }
        
        stage("build container") {
            agent {
                dockerfile {
                    filename 'dockerfile'
                    additionalBuildArgs '-p 8081:80'
                }
            }
            steps{
                echo "the container is created"
            }
        }
    }
}
