pipeline {
    agent any

    stages {
        stage('Get code') {
            steps {
                git branch: 'main', url: 'https://github.com/Saketh227/one.git'
            }
        }
        
        stage("build container") {
            agent {
                // Equivalent to "docker build -f Dockerfile.build --build-arg version=1.0.2 ./build/
                dockerfile {
                    filename 'dockerfile'
                }
            }
        }
    }
}
